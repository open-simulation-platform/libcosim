<?xml version="1.0" encoding="utf-8" ?>
<OspSystemStructure xmlns="http://opensimulationplatform.com/MSMI/OSPSystemStructure">
    <StartTime>0.0</StartTime>
    <BaseStepSize>1e-4</BaseStepSize>
    <Algorithm>fixedStep</Algorithm>
    <Simulators>
        <Simulator name="CraneController" source="../ssp/demo/CraneController.fmu" stepSize="2e-4">
            <InitialValues>
                <InitialValue variable="cl1_min">
                    <Real value="2.2"/>
                </InitialValue>
                <InitialValue variable="cl1_max">
                    <Real value="3.8"/>
                </InitialValue>
            </InitialValues>
        </Simulator>
        <Simulator name="KnuckleBoomCrane" source="../ssp/demo/KnuckleBoomCrane.fmu" stepSize="2e-4"/>
    </Simulators>
    <PlugSocketConnections>
        <PlugSocketConnection>
            <Source simulator="KnuckleBoomCrane" endpoint="actuatorLimits"/>
            <Target simulator="CraneController" endpoint="actuatorLimits"/>
        </PlugSocketConnection>
    </PlugSocketConnections>
    <BondConnections>
        <BondConnection>
            <Bond simulator="CraneController" endpoint="mechanical"/>
            <Bond simulator="KnuckleBoomCrane" endpoint="mechanical"/>
        </BondConnection>
    </BondConnections>
    <VariableConnections/>
</OspSystemStructure>
