<?xml version="1.0" encoding="UTF-8"?>
<ssd:SystemStructureDescription name="simple-cse-example" version="1.0"
                                xmlns:ssd="http://ssp-standard.org/SSP1/SystemStructureDescription"
                                xmlns:ssc="http://ssp-standard.org/SSP1/SystemStructureCommon">
    <ssd:System name="cse-instance" description="An example of how to use Core Simulation Environment">

        <ssd:Annotations>
            <ssc:Annotation type="org.open-simulation-platform">
                <osp:SimulationInformation>
                    <osp:FixedStepMaster description="FixedStepAlgorithm" stepSize="1e-4"/>
                </osp:SimulationInformation>
            </ssc:Annotation>
        </ssd:Annotations>

        <ssd:Elements>
            <ssd:Component name="FMU1" source="FMU1.fmu">
                <ssd:Connectors>
                    <!-- Seems to match nicely with our consept of "expose" -->
                    <ssd:Connector name="Out" kind="output">
                        <Real/>
                    </ssd:Connector>
                </ssd:Connectors>
            </ssd:Component>
            <ssd:Component name="FMU2" source="FMU2.fmu">
                <ssd:Connectors>
                    <ssd:Connector name="In" kind="input">
                        <Real/>
                    </ssd:Connector>
                </ssd:Connectors>
            </ssd:Component>
        </ssd:Elements>

        <ssd:Connections>
            <ssd:Connection startElement="FMU1" startConnector="Out" endElement="FMU2" endConnector="In"/>
        </ssd:Connections>

    </ssd:System>
</ssd:SystemStructureDescription>
